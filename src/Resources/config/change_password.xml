<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <services>
    <service id="nucleos_user.change_password.form.factory" class="Nucleos\UserBundle\Form\Factory\FormFactory">
      <argument type="service" id="form.factory"/>
      <argument>%nucleos_user.change_password.form.name%</argument>
      <argument>%nucleos_user.change_password.form.type%</argument>
      <argument>%nucleos_user.change_password.form.validation_groups%</argument>
    </service>
    <service id="nucleos_user.change_password.form.type" class="Nucleos\UserBundle\Form\Type\ChangePasswordFormType">
      <tag name="form.type" alias="nucleos_user_change_password"/>
      <argument>Nucleos\UserBundle\Form\Model\ChangePassword</argument>
    </service>
    <service id="Nucleos\UserBundle\Action\ChangePasswordAction" public="true">
      <argument type="service" id="twig"/>
      <argument type="service" id="router"/>
      <argument type="service" id="security.helper"/>
      <argument type="service" id="event_dispatcher"/>
      <argument type="service" id="nucleos_user.change_password.form.factory"/>
      <argument type="service" id="nucleos_user.user_manager"/>
    </service>
  </services>
</container>
